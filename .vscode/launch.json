    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'biu'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=biu",
                    "--package=biu"
                ],
                "filter": {
                    "name": "biu",
                    "kind": "bin"
                }
            },
            "args": [
                "backup",
                "--backup-path=/tmp/biu",
                "--source-paths=/home/dominic/Downloads",
                // "--initialize"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'biu'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=biu",
                    "--package=biu"
                ],
                "filter": {
                    "name": "biu",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}